# ======================================
# Variables de Entorno - Mentor de Proyectos
# Docker Compose Configuration
# ======================================

# =====================================
# Database Configuration
# =====================================
POSTGRES_DB=mentor_proyectos
POSTGRES_USER=mentor_user
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_PORT=5432

# =====================================
# pgAdmin Configuration (Solo Development)
# =====================================
PGADMIN_EMAIL=admin@mentor.dev
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# =====================================
# Application Ports
# =====================================
BACKEND_PORT=3000
AI_SERVICE_PORT=3001

# =====================================
# Backend Configuration
# =====================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CORS_ORIGINS=http://localhost:19006,http://localhost:8081,exp://localhost:8081

# Features
ENABLE_CHECKIN_SCHEDULER=false
ENABLE_WEEKLY_REVIEW_SCHEDULER=false
WEEKLY_REVIEW_TARGET_HOURS=10
DB_SYNC=false

# RevenueCat Integration
REVENUECAT_WEBHOOK_SECRET=your-revenuecat-webhook-secret

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your-expo-access-token

# =====================================
# AI Service Configuration
# =====================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# =====================================
# Environment-Specific Overrides
# =====================================

# PRODUCTION EXAMPLE:
# NODE_ENV=production
# DB_SYNC=false
# ENABLE_CHECKIN_SCHEDULER=true
# ENABLE_WEEKLY_REVIEW_SCHEDULER=true
# CORS_ORIGINS=https://yourapp.com,https://admin.yourapp.com

# DEVELOPMENT EXAMPLE:
# NODE_ENV=development
# DB_SYNC=true
# POSTGRES_DB=mentor_proyectos_dev
# POSTGRES_PASSWORD=dev_password
# JWT_SECRET=dev-secret-key-change-in-production
# CORS_ORIGINS=http://localhost:19006,http://localhost:8081,exp://localhost:8081

# STAGING EXAMPLE:
# NODE_ENV=staging
# DB_SYNC=false
# ENABLE_CHECKIN_SCHEDULER=false